generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  fullName      String
  email         String    @unique
  password      String
  avatar        String?
  dob           String
  emailVerified Boolean   @default(false)
  refreshToken  String
  isSubscribed  Boolean   @default(false)
  isActice      Boolean   @default(true)
  isDeleted     Boolean   @default(false)
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum DeviceType {
  APP
  WEBSITE
}

model Session {
  id           String     @id @default(uuid())
  User         User?      @relation(fields: [userId], references: [id])
  userId       String?
  refreshToken String
  referrer     DeviceType
  ip           String?
  expiresAt    DateTime
  revoked      Boolean    @default(false)
  createdAt    DateTime   @default(now())
}

model SubscriptionPlan {
  id          String @id @default(uuid())
  name        String
  description String
  amount      Float
}

model MedicineUsage {
  id             String   @id @default(uuid())
  drug           String
  targetIllness  String[]
  dosagePerDay   Int
  durationInDays Int
  supportingDocs String[]
}

model PastSurgeries {
  id             String   @id @default(uuid())
  surgery        String
  category       String
  date           DateTime
  doctor         String?
  hospital       String?
  supportingDocs String[]
}

model Allergies {
  id             String   @id @default(uuid())
  allergy        String
  category       String
  medicines      String[]
  supportingDocs String[]
}
